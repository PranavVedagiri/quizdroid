<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pranavv.washington.edu.quizdroid" >

    <application
        android:name=".QuizApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MathOverview" />
        <activity android:name=".mathQuestionOne" />
        <activity android:name=".MathQuestionTwo" />
        <activity android:name=".mathAnswerOne" />
        <activity android:name=".PhysicsOverview" />
        <activity android:name=".physicsQuestionOne" />
        <activity android:name=".physicsQuestionTwo" />
        <activity android:name=".PhysicsAnswer" />
        <activity android:name=".MarvelOverview" />
        <activity android:name=".marvelQuestionOne" />
        <activity android:name=".marvelQuestionTwo" />
        <activity android:name=".MarvelAnswer" />
        <activity android:name=".topic"/>
        <activity android:name=".preferences_changer"/>

    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


</manifest>